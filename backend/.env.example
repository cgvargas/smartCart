# ===================================
# SmartCart Backend - Environment Variables
# ===================================
# Copie este arquivo para .env e preencha os valores

# Django Settings
# ----------------
# Gerar nova SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-generate-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Supabase PostgreSQL)
# ------------------------------
# Uncomment and fill for PostgreSQL, otherwise SQLite will be used
# DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# CORS Settings (para mobile)
# ---------------------------
# Adicione IPs/URLs do seu dispositivo/emulador
CORS_ALLOWED_ORIGINS=http://localhost:19006,http://127.0.0.1:19006,exp://192.168.1.100:19000

# JWT Settings
# ------------
# Tempo em minutos
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
